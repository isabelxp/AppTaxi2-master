<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.joseris.apptaxi.FragmnetsRegistroUsuario.RegistroUsuarioDos">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_checkflecha"
        app:backgroundTint="@android:color/black"
        app:layout_anchor="@+id/include"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:layout_anchorGravity="bottom|right"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
 <RelativeLayout
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="250dp"
         android:background="@drawable/fondotomarfoto"
         android:id="@+id/imagecedula"
         android:layout_alignParentTop="true"
         android:layout_alignParentStart="true"
         android:scaleType="fitXY"
         android:layout_marginTop="58dp" />
     <LinearLayout
         android:layout_below="@id/imagecedula"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:background="#E0E0E0"
         android:id="@+id/linearLayout">
     </LinearLayout>

     <TextView
         android:layout_marginLeft="3dp"
         android:text="Recuerde, el documento debe ser de tu propiedad y debe coinncidir con los datos registrados por ti anteriormente."
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="21dp"
         android:id="@+id/textView6"
         android:textSize="13dp"
         android:layout_below="@+id/textView5"
         android:layout_centerHorizontal="true" />

     <TextView
         android:layout_marginLeft="3dp"
         android:text="Los conductores se sentirar mas seguros sabiendo que no usaras datos falsos para solicitar servicios."
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="11dp"
         android:textSize="13dp"
         android:id="@+id/textView7"
         android:layout_below="@+id/textView6"
         android:layout_alignParentStart="true" />

     <TextView
         android:layout_marginLeft="3dp"
         android:text="Por favor toma una fotografia de tu Cedula de Identidad o pasaporte"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="20dp"
         android:id="@+id/textView5"
         android:layout_marginTop="13dp"
         android:layout_below="@+id/linearLayout"
         android:layout_alignParentStart="true" />

     <TextView
         android:text="TOMAR FOTOGRAFIA"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="13dp"
         android:id="@+id/textView4"
         android:textColor="@android:color/white"
         android:layout_marginTop="112dp"
         android:layout_alignTop="@+id/imagecedula"
         android:layout_centerHorizontal="true" />


 </RelativeLayout>

</FrameLayout>
