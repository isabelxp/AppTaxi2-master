<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    tools:context="com.example.joseris.apptaxi.FragmentsApp.FragmentParteBusquedaMapa">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <Button
           android:text="Confirmar"
           android:background="@android:color/black"
           android:textColor="@android:color/white"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:id="@+id/button2"
           android:layout_alignParentBottom="true"
           android:layout_alignParentStart="true" />

       <Button
           android:text="Efectivo"
           android:textSize="12dp"
           android:background="@android:color/white"
           android:layout_width="220dp"
           android:layout_height="50dp"
           android:layout_marginBottom="4dp"
           android:id="@+id/buttonefectivo"
           android:drawableRight="@drawable/ic_arrow_drop_down_circle"
           android:drawableLeft="@drawable/ic_money"
           android:layout_above="@+id/button2"
           android:layout_alignParentStart="true" />

       <Button
           android:background="@android:color/white"
           android:textSize="12dp"
           android:text="opciones"
           android:drawableLeft="@drawable/ic_icon_opcion"
           android:layout_width="120dp"
           android:layout_height="50dp"
           android:id="@+id/buttonopciones"
           android:layout_marginBottom="4dp"
           android:layout_alignBaseline="@+id/buttonefectivo"
           android:layout_alignBottom="@+id/buttonefectivo"
           android:layout_alignParentEnd="true" />

       <EditText
           android:background="@android:color/white"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginBottom="4dp"
           android:textColor="@android:color/black"
           android:text="   TARIFA TOTAL"
           android:inputType="none"
           android:ems="10"
           android:editable="false"
           android:drawableRight="@drawable/ic_icon_bs"
           android:layout_above="@+id/buttonefectivo"
           android:layout_centerHorizontal="true"
           android:id="@+id/editText" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:inputType="textPersonName"
           android:elevation="8dp"
           android:layout_marginLeft="4dp"
           android:layout_marginRight="4dp"
           android:drawableRight="@drawable/ic_relojir"
           android:background="@android:color/white"
           android:text="      Â¿A donde quieres ir?"
           android:shadowDy="6"
           android:shadowRadius="1.2"
           android:drawableLeft="@drawable/ic_ir"
           android:ems="10"
           android:textColor="@android:color/tertiary_text_dark"
           android:shadowDx="3"
           android:layout_marginTop="66dp"
           android:id="@+id/editText3"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true"
           tools:textColor="?android:attr/textColorHintInverse" />


   </RelativeLayout>

</FrameLayout>
